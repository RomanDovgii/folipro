mixin picture(path, format, image, tabletImage, mobileImage, width, height, altText)
  picture
    source(type='image/webp', media="(min-width: 1024px)", srcset= 'img/' + path + '/' + image + '@0.5x.webp' + ' 0.5x, ' + 'img/' + path + '/' + image + '@1x.webp' + ' 1x, ' + 'img/' + path + '/' + image + '@2x.webp' + ' 2x, ' + 'img/' + path + '/' + image + '@3x.webp' + ' 3x')
    source(type='image/jpeg', media="(min-width: 1024px)", srcset= 'img/' + path + '/' + image + '@0.5x.' + format + ' 0.5x, ' + 'img/' + path + '/' + image + '@1x.' + format + ' 1x, ' + 'img/' + path + '/' + image + '@2x.' + format + ' 2x, ' + 'img/' + path + '/' + image + '@3x.' + format + ' 3x')
    source(type='image/webp', media="(min-width: 768px)", srcset= 'img/' + path + '/' + tabletImage + '@0.5x.webp' + ' 0.5x, ' + 'img/' + path + '/' + tabletImage + '@1x.webp' + ' 1x, ' + 'img/' + path + '/' + tabletImage + '@2x.webp' + ' 2x, ' + 'img/' + path + '/' + tabletImage + '@3x.webp' + ' 3x')
    source(type='image/jpeg', media="(min-width: 768px)", srcset= 'img/' + path + '/' + tabletImage + '@0.5x.' + format + ' 0.5x, ' + 'img/' + path + '/' + tabletImage + '@1x.' + format + ' 1x, ' + 'img/' + path + '/' + tabletImage + '@2x.' + format + ' 2x' + 'img/' + path + '/' + tabletImage + '@3x.' + format + ' 3x' )
    source(type='image/webp', srcset= 'img/' + path + '/' + mobileImage + '@0.5x.webp' + ' 0.5x, ' + 'img/' + path + '/' + mobileImage + '@1x.webp' + ' 1x, ' + 'img/' + path + '/' + mobileImage + '@2x.webp' + ' 2x, ' + 'img/' + path + '/' + mobileImage + '@3x.webp' + ' 3x')
    img(src= 'img/' + path + '/' + mobileImage + '@1x.' + format, srcset= 'img/' + path + '/' + mobileImage + '@0.5x.' + format + ' 0.5x, ' + 'img/' + path + '/' + mobileImage + '@1x.' + format + ' 1x, ' + 'img/' + path + '/' + mobileImage + '@2x.' + format + ' 2x, ' + 'img/' + path + '/' + mobileImage + '@3x.' + format + ' 3x, ', alt= altText, width= width, height = height)
